<%= form_for @article do |f| %>
  <div class="entry">
    
    <h3><%= f.label :title, 'Заголовок' %></h3>
    <%= f.text_field :title %>

    <h3><%= f.label :text, 'Текст' %></h3>
    <%= f.text_area :text %>

    <%= f.submit 'Отправить' %>
  </div>
<% end %>
<% if @article.errors.any? %>
  <div class="entry error_explanation">
    <h2>
      <%= pluralize(@article.errors.count, "error") %> prohibited
      this article from being saved:
    </h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>